<config>
	<!-- Definition of the datasource -->

	<!-- type - relational database system (rdbs) identifer (mysql) -->
	<!-- db - database name -->
	<!-- host - network connection to rdbs -->
	<!-- port - network port to rdbs -->
	<!-- user - database user -->
	<!-- password - database user's password -->
	<!-- useSchema - true if schemata shall be supported (<schema>.<table>) -->
	<!-- useDelimiter - true if delimiters for multi word columns shall be used -->
	<datasource type="mysql" db="sakila" host="localhost" port="3306"
		user="graphbi" password="graphbi" useSchema="false" useDelimiter="false" />

	<!-- Definition of the datasink (currently not really generic) -->

	<!-- type - graph database identifier (neo4j) -->
	<!-- path - local path of the graphdb -->
	<!-- drop - True, if the db shall be removed before insert -->
	<datasink type="neo4j" path="target/db" drop="true" />
</config>